<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBlaco"
    android:orientation="vertical"
    tools:context="com.example.jose.prueba_t2_interfaces.LoginActivity">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/iv_login_fox"
        android:src="@drawable/fox"
        app:civ_shadow_radius="10"
        style="@style/imgcirfox" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_login_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_login_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_login_entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMorado"
            android:text="entrar"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
